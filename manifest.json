{
  "manifest_version": 3,
  "name": "Discogs Enhancer",
  "short_name": "Discogs Enhancer",
  "description": "Adds a dark theme, block sellers, price comparisons, currency converter, configurable quick search, & more to Discogs!",
  "version": "2.25.28",
  "author": "Matthew Salcido",
  "homepage_url": "https://www.discogs-enhancer.com",
  "action": {
    "default_icon": {
      "16": "img/icon_16.png",
      "32": "img/icon_32.png",
      "48": "img/icon_48.png",
      "128": "img/icon_128.png"
    },
    "default_title": "Discogs Enhancer",
    "default_popup": "html/popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.discogs.com/*"
      ],
      "js": [
        "js/extension/user-preferences.js"
      ],
      "css": [
        "css/dark-theme.css"
      ],
      "run_at": "document_start"
    }
  ],
  "background": {
    "service_worker": "js/extension/background.js"
  },
  "minimum_chrome_version": "51",
  "permissions": [
    "storage",
    "contextMenus",
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "*://*.discogs.com/*"
  ],
  "icons": {
    "16": "img/icon_16.png",
    "32": "img/icon_32.png",
    "48": "img/icon_48.png",
    "128": "img/icon_128.png"
  },
  "web_accessible_resources": [{
    "resources": [
      "css/*",
      "js/extension/dependencies/*",
      "js/extension/features/*",
      "html/block-sellers.html",
      "html/favorite-sellers.html",
      "html/learn.html",
      "html/readability.html",
      "html/welcome.html"
    ],
    "matches": ["*://*.discogs.com/*"]
  }]
}
